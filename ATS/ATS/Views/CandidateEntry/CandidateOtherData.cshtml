<script>
    $(document).ready(function () {
        // Your existing code for showing/hiding language options based on dropdown change
        $('#languageDropdown').change(function () {
            var selectedLanguage = $(this).val();
            showHideLanguageOptions(selectedLanguage);
        });

        function showHideLanguageOptions(selectedLanguage) {
            var languageOptionsDiv = $('#languageOptions');
            var addButtonDiv = $('#addButtonSection');

            languageOptionsDiv.show();
            addButtonDiv.show();
        }

        // Your existing code for populating virtual grid with stored languages
        var storedLanguages = JSON.parse(localStorage.getItem("languages")) || [];
        if (storedLanguages.length > 0) {
            storedLanguages.forEach(function (languageDetail) {
                var newRow = $("<div class='grid-row'>" +
                    "<div class='grid-cell'>" + languageDetail.Language + "</div>" +
                    "<div class='grid-cell'>" + (languageDetail.Read ? "Yes" : "No") + "</div>" +
                    "<div class='grid-cell'>" + (languageDetail.Write ? "Yes" : "No") + "</div>" +
                    "<div class='grid-cell'>" + (languageDetail.Speak ? "Yes" : "No") + "</div>" +
                    "</div>");

                $("#virtualGrid").append(newRow);
            });
        }

        // Your existing code for adding a new language
        function addLanguage(event) {
            var selectedLanguage = $("#languageDropdown").val();
            var read = $("#chkRead").prop("checked");
            var write = $("#chkWrite").prop("checked");
            var speak = $("#chkSpeak").prop("checked");

            var newRow = $("<div class='grid-row'>" +
                "<div class='grid-cell'>" + selectedLanguage + "</div>" +
                "<div class='grid-cell'>" + (read ? "Yes" : "No") + "</div>" +
                "<div class='grid-cell'>" + (write ? "Yes" : "No") + "</div>" +
                "<div class='grid-cell'>" + (speak ? "Yes" : "No") + "</div>" +
                "</div>");

            $("#virtualGrid").append(newRow);
            var storedLanguages = JSON.parse(localStorage.getItem("languages")) || [];
            storedLanguages.push({
                Language: selectedLanguage,
                Read: read,
                Write: write,
                Speak: speak
            });
            localStorage.setItem("languages", JSON.stringify(storedLanguages));

            // Clear the form after adding the language
            $("#languageDropdown").val("");
            $("#chkRead, #chkWrite, #chkSpeak").prop("checked", false);

            // Prevent the default form submission behavior
            event.preventDefault();
        }

        // Event handler for the "Add" button
        $('#addLangiage').on('click', addLanguage);
    });
</script>
