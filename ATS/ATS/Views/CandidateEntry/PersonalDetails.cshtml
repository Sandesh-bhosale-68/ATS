    <script src="~/js/jquery.min.js"></script>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        function handlePrevImageClick() {
            LocalStorage();
            var url = '@Url.Action("FillCandidateDetails", "CandidateEntry")';
            window.location.href = url;
        }
        function validateForm() {

            var firstName = document.getElementById("FirstName").value;
            var emergencyContact = document.getElementById("EmergencyContactDetails").value;
            var ref1 = document.getElementById("Ref1").value;
            var ref2 = document.getElementById("Ref2").value;
            if (firstName.trim() === "") {
                alert("Please enter a valid First Name.");
                return;
            }
            if (!/^\d{10}$/.test(emergencyContact)) {
                alert("Please enter a valid 10-digit Emergency Contact number.");
                return;
            }
            if (!isNaN(ref1) || !isNaN(ref2)) {
                alert("References should not be numeric.");
                return;
            }
            return true;
        }

        function handleImageClick() {

            validateForm();
            LocalStorage();

            $.ajax({
                type: 'POST',
                url: '/CandidateEntry/PersonalDetails',
                data: {
                    FirstName: localStorage.getItem('FirstName'),
                    FatherName: localStorage.getItem('FatherName'),
                    MotherName: localStorage.getItem('MotherName'),
                    LastName: localStorage.getItem('LastName'),
                    AdharName: localStorage.getItem('AdharName'),
                    Gender: localStorage.getItem('Gender'),
                    EmergencyContactDetails: localStorage.getItem('EmergencyContactDetails'),
                    BloodGroup: localStorage.getItem('BloodGroup'),
                    Ref1: localStorage.getItem('Ref1'),
                    Ref2: localStorage.getItem('Ref2')
                },
                success: function (data) {
                    window.location.href = '/CandidateEntry/QualificationDetails';
                },
                error: function (error) {
                    console.error('Error:', error);
                }
            });
        }


        function LocalStorage() {
            localStorage.setItem('FirstName', $('input[name="FirstName"]').val());
            localStorage.setItem('FatherName', $('input[name="FatherName"]').val());
            localStorage.setItem('MotherName', $('input[name="MotherName"]').val());
            localStorage.setItem('LastName', $('input[name="LastName"]').val());
            localStorage.setItem('AdharName', $('input[name="AdharName"]').val());
            localStorage.setItem('Gender', $('select[name="Gender"]').val());
            localStorage.setItem('EmergencyContactDetails', $('input[name="EmergencyContactDetails"]').val());
            localStorage.setItem('BloodGroup', $('select[name="BloodGroup"]').val());
            localStorage.setItem('Ref1', $('input[name="Ref1"]').val());
            localStorage.setItem('Ref2', $('input[name="Ref2"]').val());
        }
        $(document).ready(function () {

            if (localStorage.getItem('FirstName') !== null) {
                $('input[name="FirstName"]').val(localStorage.getItem('FirstName'));
            }

            if (localStorage.getItem('FatherName') !== null) {
                $('input[name="FatherName"]').val(localStorage.getItem('FatherName'));
            }

            if (localStorage.getItem('MotherName') !== null) {
                $('input[name="MotherName"]').val(localStorage.getItem('MotherName'));
            }

            if (localStorage.getItem('LastName') !== null) {
                $('input[name="LastName"]').val(localStorage.getItem('LastName'));
            }

            if (localStorage.getItem('AdharName') !== null) {
                $('input[name="AdharName"]').val(localStorage.getItem('AdharName'));
            }

            if (localStorage.getItem('Gender') !== null) {
                $('select[name="Gender"]').val(localStorage.getItem('Gender'));
            }

            if (localStorage.getItem('EmergencyContactDetails') !== null) {
                $('input[name="EmergencyContactDetails"]').val(localStorage.getItem('EmergencyContactDetails'));
            }

            if (localStorage.getItem('BloodGroup') !== null) {
                $('select[name="BloodGroup"]').val(localStorage.getItem('BloodGroup'));
            }

            if (localStorage.getItem('Ref1') !== null) {
                $('input[name="Ref1"]').val(localStorage.getItem('Ref1'));
            }

            if (localStorage.getItem('Ref2') !== null) {
                $('input[name="Ref2"]').val(localStorage.getItem('Ref2'));
            }

            localStorage.removeItem('FirstName');
            localStorage.removeItem('FatherName');
            localStorage.removeItem('MotherName');
            localStorage.removeItem('LastName');
            localStorage.removeItem('AdharName');
            localStorage.removeItem('Gender');
            localStorage.removeItem('EmergencyContactDetails');
            localStorage.removeItem('BloodGroup');
            localStorage.removeItem('Ref1');
            localStorage.removeItem('Ref2');
        });
    </script>
</body>

</html>
