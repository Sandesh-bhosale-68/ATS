                            <a href="#" class="nav-link align-middle">
                                <img src="~/Images/icon_calendar.png" /><span class="ms-1 d-none d-sm-inline">Menu 7</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link align-middle">
                                <img src="~/Images/icon_help-center.png" /><span class="ms-1 d-none d-sm-inline">Menu 8</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link align-middle">
                                <img src="~/Images/icon_setting.png" /><span class="ms-1 d-none d-sm-inline">Menu 9</span>
                            </a>
                        </li>
                    </ul>
                    <hr>

                </div>
            </div>
            <div class="col perDetails">
                <div class="col-sm-8 content2">
                    <div class="sectionHeading">
                        <h4>Personal Details</h4>
                    </div>
                    <div class="col-sm-12 form">
                        <form>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label><span class="required">*</span> required fields</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputFirstName">First Name <span class="required"> *</span></label>
                                        <input type="text" class="form-control" asp-for="FirstName" aria-describedby="" placeholder="Enter First Name">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputLastName">Last Name <span class="required"> *</span></label>
                                        <input type="text" class="form-control" asp-for="LastName" aria-describedby="" placeholder="Enter Last Name">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputMotherName">Mother’s Name <span class="required"> *</span></label>
                                        <input type="text" class="form-control" asp-for="MotherName" aria-describedby="" placeholder="Enter Mother's Name">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputFatherName">Father’s Name <span class="required"> *</span></label>
                                        <input type="text" class="form-control" asp-for="FatherName" aria-describedby="" placeholder="Enter Father’s Name">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputAadhaarName">Name as per Aadhaar <span class="required"> *</span></label>
                                        <input type="text" class="form-control" asp-for="AdharName" aria-describedby="" placeholder="Enter Name as per Aadhaar">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputGender">Gender <span class="required"> *</span></label>
                                        <select asp-for="Gender" class="form-control">
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputEmergencyCont">Emergency Contact Details <span class="required"> *</span></label>
                                        <input type="text" class="form-control" asp-for="EmergencyContactDetails" aria-describedby="" placeholder="Enter Emergency Contact Details">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputBloodGroup">Blood Group <span class="required"> *</span></label>
                                        <select asp-for="BloodGroup" class="form-control">
                                            <option value="">Select Blood Group</option>
                                            <option value="A+">A+</option>
                                            <option value="A-">A-</option>
                                            <option value="B+">B+</option>
                                            <option value="B-">B-</option>
                                            <option value="O+">O+</option>
                                            <option value="O-">O-</option>
                                            <option value="AB+">AB+</option>
                                            <option value="AB-">AB-</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputRef1">1 Reference to join OPO <span class="required"> *</span></label>
                                        <input type="text" class="form-control" asp-for="Ref1" aria-describedby="" placeholder="Enter 1st Reference to join OPO">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputRef2">2 Reference to join OPO <span class="required"> *</span></label>
                                        <input type="text" class="form-control" asp-for="Ref2" aria-describedby="" placeholder="Enter 2nd Reference to join OPO">
                                    </div>
                                </div>
                            </div><br /><br />

                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-secondary btn-previous" onclick="handlePrevImageClick()"><img src="~/Images/icon_previous.png" /><label> Previous</label></button>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">&nbsp;</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-secondary btn-next btn-pullright" onclick="handleImageClick()">Next<img src="~/Images/icon_next.png" /></button>
                                    </div>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
