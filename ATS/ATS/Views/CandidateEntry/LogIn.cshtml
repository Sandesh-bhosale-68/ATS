
@model ATS.Models.LogIn
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>1.1</title>

    <link href="css/bootstrap.min.css" rel="stylesheet">

    <script src="js/bootstrap.bundle.min.js"></script>
    <link href="css/mainStyle.css" rel="stylesheet">
</head>
<body>
    <div class="content">
        <div class="row">
            <div class="col-md-6">
                <img class="loginImg" src="~/Images/loginImage.jpg" />
            </div>
            <div class="col-md-6 center">
                <div class="col-sm-6 centerContent">
                    <div class="loginLogo">
                        <img class="loginlogoimg" src="~/Images/Logo.png" />
                        
                    </div>
                    <p>
                        <h5 style="color: #5968A8 !important; text-align: center;">Welcome back! Please login to your account.</h5>
                    </p>
                    <form method="post">
                        <div class="row col-sm-12">
                            <div class="form-group">
                                <label for="inputUserName">Username</label>
                                <input type="text" class="form-control" asp-for="UserName" aria-describedby="" placeholder="Enter Username">
                            </div>
                        </div>
                        <div class="row col-sm-12">
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" asp-for="Password"  aria-describedby="" placeholder="Enter Password">
                            </div>
                        </div>
                        <div class="row col-sm-12">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">Remember Me</label>
                                <span class="pullright">
                                    <a href="#" class="">Forgot Password</a>
                                </span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                        <button type="submit" class="btn btn-secondary pullright">Sign up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
