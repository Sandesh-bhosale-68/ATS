                <div class="col-xs-12 col-sm-11 content2">
                    <div class="sectionHeading">
                        <h4>HR Work Department</h4>
                    </div>
                    <div class="col-sm-12 form">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Master ID</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>

                                        <th>Location</th>
                                        <th>Position</th>
                                        <th>Gender</th>
                                        <th>Education</th>
                                        <th>Passing Year</th>

                                        <th>Percentage</th>
                                        <th>Experience</th>
                                        <th>Assessment</th>
                                        <th>Reject</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var candidate in Model)
                                    {
                                        <tr>
                                            <td>@candidate.Masterid</td>
                                            <td>@candidate.FirstName</td>
                                            <td>@candidate.LastName</td>
                                            <td>@candidate.Location</td>
                                            <td>@candidate.Position</td>
                                            <td>@candidate.Gender</td>
                                            <td>@candidate.Education</td>
                                            <td>@candidate.PassingYear</td>

                                            <td>@candidate.Percentage</td>
                                            <td>@candidate.Experience</td>
                                            <td style="text-align: center;">
                                                <img src="~/Images/Write.jfif" class="img-fluid" alt="Previous Image" style="max-width: 30px; max-height: 30px;" onclick="AssignInterView(event)" />


                                            </td>
                                            <td>
                                                <img src="~/Images/Wrong.png" class="img-fluid" alt="Previous Image" style="max-width: 30px; max-height: 30px;" onclick="HnadleRejectionMassage('@candidate.Masterid')" />

