    <script>
        $(document).ready(function () {
            $('#Department').change(function () {
                var selectedValue = $(this).val();


                $.ajax({
                    type: 'POST',
                    url: '/HrWorkDept/InterviewrSelection',
                    data: { selectedValue: selectedValue },
                    success: function (data) {
                        console.log(data);
                        var InterviewerDropdown = $('#Interviewer');
                        InterviewerDropdown.empty(); // Clear existing options
                        $.each(data, function (index, item) {
                            InterviewerDropdown.append($('<option>', {
                                value: item.value.toString(),
                                text: item.text
                            }));
                        });
                    },
                    error: function (error) {
                        console.error('Error:', error);
                    }
                });
            });
        });


        function ArrangeInterview() {
            var InterviewStage = $("#InterviewStage").val();
            var Department = $("#Department option:selected").text();
            var Interviewer = $("#Interviewer option:selected").text();
            var Date = $("#Date").val();
            var Time = $("#time").val();
            var MeetingLink = $("#Meeting").val();
            var CandidateEmail = $("#Email").val();


            $.ajax({
                type: "POST",
                url: "/HrWorkDept/FunctionalInterview",
                data: JSON.stringify({
                    InterviewStage: InterviewStage,
                    Department: Department,
                    Interviewer: Interviewer,
                    Date: Date,
                    Time: Time,
                    MeetingLink: MeetingLink,
                    CandidateEmail: CandidateEmail
                }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    // Handle success response
                    console.log(response);
                },
                error: function (error) {
                    // Handle error response
                    console.error(error);
                }
            });
        }
    </script>
