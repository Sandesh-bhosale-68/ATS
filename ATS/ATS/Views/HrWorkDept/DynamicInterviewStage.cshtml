                <div class="col-sm-8 content2">
                    <div class="sectionHeading">
                        <h4>Functional Interview</h4>
                    </div>
                    <div class="col-sm-12 form">
                        <form id="form1" action="/HrWorkDept/FunctionalInterview" method="post">
                            @if (ViewBag.AgeAlert != null)
                            {
                                <h3>@ViewBag.AgeAlert</h3>
                            }
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label><span class="required">*</span> required fields</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputInterview">Interview <span class="required"> *</span></label>
                                        @Html.DropDownList("InterviewStage", (SelectList)ViewBag.InterviewStage, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputSelectDepartment">Select Department <span class="required"> *</span></label>
                                        @Html.DropDownList("Department", (SelectList)ViewBag.Department, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputSelectInterviewer">Select Interviewer <span class="required"> *</span></label>
                                        @Html.DropDownList("Interviewer",  Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputSelectDate">Select Date Time <span class="required"> *</span></label>
                                      
                                            <input asp-for="Date" class="form-control datepicker" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                               
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputMeetingLink">Meeting Link  <span class="required"> *</span></label>
                                        <input asp-for="Meeting" class="form-control" />
                                    </div>
                                </div>
                            </div>
                          
                            <br /><br />

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                
                                        <button type="submit" class="btn btn-primary btn-sm">Arrange </button>
                                    </div>
                                </div>
